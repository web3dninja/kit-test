rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection - allow read/write for all (for development)
    // TODO: Add authentication rules for production
    match /posts/{postId} {
      allow read, write: if true;
    }
    
    // Comments collection - allow read/write for all (for development)
    // TODO: Add authentication rules for production
    match /comments/{commentId} {
      allow read, write: if true;
    }
    
    // Users collection - allow read/write for all (for development)
    // TODO: Add authentication rules for production
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

